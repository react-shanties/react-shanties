{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "incremental": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib/",
    "**/*.spec*"
  ]
}