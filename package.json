{
  "name": "@react-shanties/core",
  "version": "0.0.5",
  "description": "",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "test": "wireit",
    "test:coverage": "wireit",
    "lint": "wireit",
    "build": "wireit",
    "prepublishOnly": "wireit"
  },
  "wireit": {
    "test": {
      "command": "jest --colors"
    },
    "test:coverage": {
      "command": "jest --collectCoverage --colors"
    },
    "lint": {
      "command": "eslint ."
    },
    "build": {
      "command": "tsc --build",
      "dependencies": [
        "lint"
      ],
      "files": [
        "**/*.ts",
        "**/*.tsx",
        "!lib/**",
        "!node_modules/**"
      ],
      "output": [
        "lib/**"
      ]
    },
    "prepublishOnly": {
      "dependencies": [
        "test:coverage",
        "lint",
        "build"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-shanties/react-shanties.git"
  },
  "author": "Eric Siebeneich <eric.siebeneich@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-shanties/react-shanties/issues"
  },
  "homepage": "https://github.com/react-shanties/react-shanties#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@react-ddd/eslint-config": "^0.2.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "jest": "^27.5.1",
    "jest-gwt": "^3.0.2",
    "jest-mock": "^27.5.1",
    "moredash": "^0.0.11",
    "npm-run-all": "^4.1.5",
    "react": "^18.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.6.4",
    "wireit": "^0.2.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}